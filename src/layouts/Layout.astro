---
interface Props {
	title: string;
}
// Astro es una variable global que podemos utilizar en más archivos y que tiene información. En este caso estamos accediendo a los props
const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot /> {/*children de react */}
	</body>
</html>

{/*También se puede usar estilos globales */}
<style is:global>

	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
	     padding: 2rem;
		color: white;
	}
	
</style>
